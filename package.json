{
  "name": "go-rest-api",
  "version": "0.0.1",
  "description": "",
  "main": "src/index.go",
  "scripts": {
    "run": "better-npm-run run",
    "watch": "better-npm-run watch",
    "build": "go build ./src/index.go",
    "test": "cd src; go test"
  },
  "betterScripts": {
    "run": {
      "command": "go run ./src/index.go",
      "env": {
        "APP_PORT": "5000",
        "APP_ROUTE_PREFIX": "/api/v1",
        "MONGO_HOST": "localhost",
        "MONGO_PORT": "27017"
      }
    },
    "watch": {
      "command": "gin -p 5001 -a 5000 -t ./src -b index run ./src/index.go",
      "env": {
        "APP_PORT": "5000",
        "APP_ROUTE_PREFIX": "/api/v1",
        "MONGO_HOST": "localhost",
        "MONGO_PORT": "27017"
      }
    }
  },
  "author": "Chugunov Roman",
  "license": "ISC",
  "dependencies": {
    "better-npm-run": "^0.1.1"
  }
}
